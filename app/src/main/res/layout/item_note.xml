<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/note_item_height"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="@dimen/note_item_width"
        android:layout_height="@dimen/note_item_width"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/note_sub_item_bg"
        android:gravity="center_horizontal"
        android:textSize="48dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/note_item_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="4"
        android:singleLine="true"
        android:textColor="@color/note_item_name_text"
        android:textSize="12sp" />
</FrameLayout>